import random
import string

def sifre_olustur(uzunluk):
    # KullanÄ±labilecek tÃ¼m karakterleri bir araya getiriyoruz
    karakterler = string.ascii_letters + string.digits + string.punctuation
    
    # Karakter listesinden rastgele seÃ§imler yaparak ÅŸifreyi kuruyoruz
    sifre = "".join(random.choice(karakterler) for i in range(uzunluk))
    
    return sifre

# ProgramÄ±n Ã§alÄ±ÅŸmasÄ±
print("--- ğŸ” GÃ¼venli Åifre OluÅŸturucu ---")
uzunluk = int(input("Åifreniz kaÃ§ karakter olsun? (Ã–rn: 12): "))

yeni_sifre = sifre_olustur(uzunluk)
print(f"\nOluÅŸturulan Åifre: {yeni_sifre}")
