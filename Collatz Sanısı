import sys

def collatz_simulasyonu():
    print("-" * 30)
    print(" COLLATZ SANISI SÄ°MÃœLATÃ–RÃœ ")
    print("-" * 30)
    
    try:
        # KullanÄ±cÄ±dan sayÄ± alalÄ±m
        sayi = int(input("BaÅŸlangÄ±Ã§ sayÄ±sÄ±nÄ± giriniz: "))
        
        if sayi <= 0:
            print("LÃ¼tfen pozitif bir tam sayÄ± girin!")
            return

        baslangic_sayisi = sayi
        adimlar = []
        en_yuksek = sayi
        
        print(f"\n[SÃ¼reÃ§ BaÅŸlatÄ±lÄ±yor: {sayi}]")
        
        while sayi != 1:
            adimlar.append(sayi)
            if sayi % 2 == 0:
                sayi //= 2
            else:
                sayi = 3 * sayi + 1
            
            if sayi > en_yuksek:
                en_yuksek = sayi
                
            # AdÄ±mlarÄ± anlÄ±k olarak gÃ¶r
            print(f"AdÄ±m {len(adimlar)}: {sayi}")
            
        adimlar.append(1) # Son 1 deÄŸerini ekle
        
        # Ã–zet Tablo
        print("\n" + "="*30)
        print(f"ğŸ“Š SONUÃ‡ ANALÄ°ZÄ°")
        print("="*30)
        print(f"ğŸš€ BaÅŸlangÄ±Ã§ SayÄ±sÄ± : {baslangic_sayisi}")
        print(f"ğŸ Toplam AdÄ±m      : {len(adimlar) - 1}")
        print(f"ğŸ” Zirve DeÄŸer      : {en_yuksek}")
        print(f"ğŸ”„ Son DÃ¶ngÃ¼        : 4 -> 2 -> 1")
        print("="*30)

    except ValueError:
        print("Hata: LÃ¼tfen geÃ§erli bir tam sayÄ± giriniz.")

if __name__ == "__main__":
    collatz_simulasyonu()
